<Window x:Class="SprintRetrospectiveFront.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SprintRetrospectiveFront"
        mc:Ignorable="d"
        Title="Sprint Retrospective" Height="920" Width="1220">
  <Border Background="#f1f3f4">
    <StackPanel>
      <!--Welcome Message-->
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="3*"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="3*"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="3*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Sprint Retrospective V1.0" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
        <Label Grid.Column="2" Content="User :" Margin="79,4,134,6" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontStyle="Normal"/>
        <ComboBox x:Name="ComboBoxUser" HorizontalAlignment="Right" Grid.Column="2" VerticalContentAlignment="Center" Width="220" Margin="0,5,10,5"  SelectedValuePath="Id" SelectedValue="{Binding Id}" SelectionChanged="ComboBoxUser_SelectionChanged"  Grid.ColumnSpan="2" IsDropDownOpen="True" >
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock>
                <TextBlock.Text>
                  <MultiBinding StringFormat="{}{0} {1}">
                    <Binding Path="FirstName"/>
                    <Binding Path="LastName"/>
                  </MultiBinding>
                </TextBlock.Text>
              </TextBlock>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
        <Label Grid.Column="4" Content="Project :" Margin="0,5,213,5" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontStyle="Normal"/>
        <ComboBox x:Name="ComboBoxProject" HorizontalAlignment="Right" Grid.Column="4" VerticalContentAlignment="Center" Width="200" Margin="5" DisplayMemberPath="ProjectName" SelectedValuePath="Id"  SelectionChanged="ComboBoxProject_SelectionChanged"></ComboBox>
        <!--<TextBox x:Name="txtMessage" HorizontalAlignment="Right" Grid.Column="1" IsReadOnly="True" Margin="5" TextWrapping="Wrap"  VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" BorderThickness="0" Width="100"></TextBox>-->
        <Button x:Name="ButtonClose" Foreground="white"  Background="#75b79e" Grid.Column="5" Width="60" Content="CLOSE" Margin="0 4 10 0" HorizontalAlignment="Right" Click="ButtonClose_Click"></Button>
      </Grid>

      <Grid Margin="0,0,-6.6,0.4">

        <!-- Dash Board -->
        <GroupBox Header="DASH BOARD" HorizontalAlignment="Left" Height="460" Margin="10,0,10,0" VerticalAlignment="Top" Width="1190" FontStyle="Italic">

          <Grid Margin="0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*"/>
              <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
              <!--Score Section-->
              <GroupBox Header="SCORE" HorizontalAlignment="Left" Height="220" Margin="10,0,0,0" VerticalAlignment="Top" Width="379" FontStyle="Italic">
                <Grid Margin="0">
                  <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                  </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Label Content="Team Member :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" FontStyle="Normal"/>
                  <Label Content="User Story :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="1" FontStyle="Normal"/>
                  <Label Content="(Total) Estimated Time :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="2" FontStyle="Normal"/>
                  <Label Content="(Total) Actual Time :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="3" FontStyle="Normal"/>
                  <Label Content="Score (Accuracy):" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="4" FontStyle="Normal"/>

                  <ComboBox x:Name="ComboBoxTeamMember" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="0" VerticalContentAlignment="Center" Width="174" Margin="5" FontStyle="Normal" SelectedValue="{Binding Id}" SelectedValuePath="Id" SelectionChanged="ComboBoxTeamMember_SelectionChanged" >
                    <ComboBox.ItemTemplate>
                      <DataTemplate>
                        <TextBlock>
                          <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                              <Binding Path="FirstName"/>
                              <Binding Path="LastName"/>
                            </MultiBinding>
                          </TextBlock.Text>
                        </TextBlock>
                      </DataTemplate>
                    </ComboBox.ItemTemplate>
                  </ComboBox>
                  <ComboBox x:Name="ComboBoxUserStory" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" Width="174" Margin="5" FontStyle="Normal" SelectedValuePath="Id" DisplayMemberPath="Description" SelectionChanged="ComboBoxUserStory_SelectionChanged"></ComboBox>
                  <TextBox x:Name="txtTotalEstimatedTime" Margin="5" TextWrapping="Wrap" Grid.Column="1"  Grid.Row="2" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="0"/>
                  <TextBox x:Name="txtTotalActualTime" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="0"/>
                  <TextBox x:Name="txtScore" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="4" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="0"/>
                </Grid>
              </GroupBox>

              <!--Manager Section-->
              <GroupBox Header="PROJECT VELOCITIES UPDATE (PM ONLY)" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="379" FontStyle="Italic">
                <Grid Margin="0">
                  <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                  </Grid.RowDefinitions>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Label Content="Estimated Accuracy :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" FontStyle="Normal"/>
                  <Label Content="Actual Velocity :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="1" FontStyle="Normal"/>
                  <Label Content="New Velocity :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="2" FontStyle="Normal" />
                  <Label Content="Sprint :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="3" FontStyle="Normal"/>

                  <TextBox x:Name="txtEstimatedAccuracy" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="0" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="0"/>
                  <TextBox x:Name="txtActualVelocity" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="0"/>
                  <TextBox x:Name="txtNewVelocity" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="2" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="1" />
                  <ComboBox x:Name="ComboBoxSprint" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Center" Width="174" Margin="5" SelectedValuePath="Id" DisplayMemberPath="Id" SelectionChanged="ComboBoxSprint_SelectionChanged" IsEnabled ="False" ></ComboBox>
                </Grid>
              </GroupBox>
            </StackPanel>
            <StackPanel Grid.Column="1">
              <!-- All User Stories Section -->
              <GroupBox Header="ALL USER STORIES" Height="430" Margin="-68,0,20,0"  VerticalAlignment="Top" FontStyle="Italic">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="71*"/>
                    <ColumnDefinition Width="177*"/>
                    <ColumnDefinition Width="496*"/>
                  </Grid.ColumnDefinitions>

                  <StackPanel Grid.Column="0" Margin="5,10,5.5,10" Grid.ColumnSpan="2">
                    <Label Content="Sort By :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontStyle="Normal"/>

                    <Label Content="Sub-Sort By :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="1" FontStyle="Normal"/>

                  </StackPanel>
                  <StackPanel Grid.Column="1" Margin="0,13,0,0">
                    <ComboBox x:Name="ComboBoxSortBy1" HorizontalAlignment="Right" VerticalContentAlignment="Center" Width="150" Margin="5" ></ComboBox>
                    <ComboBox x:Name="ComboBoxSortBy2" HorizontalAlignment="Right" VerticalContentAlignment="Center" Width="150" Margin="0,7,4.5,5" />
                  </StackPanel>
                  <ListBox x:Name="UserStoriesList" Height="400" Grid.Column="2" ItemsSource="{Binding}" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" FontStyle="Normal" Margin="0.5,4,0,3"></ListBox>
                </Grid>

              </GroupBox>
            </StackPanel>
            <Button x:Name="ButtonUpdateVelocity" Foreground="white"  Background="#75b79e" Content="UPDATE VELOCITY" HorizontalAlignment="Left" Height="20" Margin="140,399,0,0" VerticalAlignment="Top" Width="150" Click="ButtonUpdateVelocity_Click" IsEnabled="False"/>
          </Grid>
        </GroupBox>
      </Grid>



      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="2*"/>
          <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>


        <StackPanel  Grid.Column="0">
          <!-- Project Section -->
          <GroupBox  Header="CAPTURE/MAINTAIN PROJECT (PM ONLY)" HorizontalAlignment="Left" Height="380" Margin="10,0,0,0" VerticalAlignment="Top" Width="466" FontStyle="Italic">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <StackPanel Grid.Column="0" Grid.Row="0">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                  </Grid.RowDefinitions>

                  <Label Content="Team Name :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" FontStyle="Normal"/>
                  <Label Content="Team Number :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="1" FontStyle="Normal"/>
                  <Label Content="Project Name :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="2" FontStyle="Normal"/>
                  <Label Content="Project Start Date :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="3" FontStyle="Normal"/>
                  <Label Content="Initial Velocity :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="4" FontStyle="Normal"/>
                  <Label Content="Current Velocity :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="5" FontStyle="Normal"/>
                  <Label Content="Hours Per Point :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="6" FontStyle="Normal"/>

                  <TextBox x:Name="txtTeamName" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="0" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                  <TextBox x:Name="txtTeamNumber" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                  <TextBox x:Name="txtProjectName" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="2" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                  <TextBox x:Name="txtProjectStartDate" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                  <TextBox x:Name="txtInitialVelocity" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="4" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                  <TextBox x:Name="txtCurrentVelocity" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="5" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="0"/>
                  <TextBox x:Name="txtHoursPerPoint" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="6" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>

                </Grid>

              </StackPanel>
              <StackPanel Grid.Column="1" Grid.Row="0">
                <GroupBox  Header="Team Members" HorizontalAlignment="Right" Height="246" Margin="10,0,0,0" VerticalAlignment="Top" Width="210" FontStyle="Italic">
                  <Grid>
                    <Grid.RowDefinitions>
                      <RowDefinition Height="*"/>
                      <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                      <ListBox x:Name="TeamMembersAddList" Height="90" Grid.Column="1" ItemsSource="{Binding}" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" FontStyle="Normal"></ListBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                      <Label Content="Member List :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontStyle="Normal"/>
                      <ComboBox x:Name="ComboBoxMember" HorizontalAlignment="Right" VerticalContentAlignment="Center" FontStyle="Normal" Margin="0,5,10,5" Width="170" SelectedValuePath="Id"  >
                        <ComboBox.ItemTemplate>
                          <DataTemplate>
                            <TextBlock>
                              <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                  <Binding Path="FirstName"/>
                                  <Binding Path="LastName"/>
                                </MultiBinding>
                              </TextBlock.Text>
                            </TextBlock>
                          </DataTemplate>
                        </ComboBox.ItemTemplate>
                      </ComboBox>
                      <!--<TextBox x:Name="txtMemberName" Margin="5" TextWrapping="Wrap" Grid.Column="1" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>-->

                      <Button x:Name="ButtonAddTeamMember" Foreground="white"  Background="#75b79e" Content="ADD MEMBER" HorizontalAlignment="Left" Height="20" Margin="30 5 0 0" VerticalAlignment="Bottom" Width="150" />
                    </StackPanel>
                  </Grid>

                </GroupBox>
              </StackPanel>

              <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5">
                <GroupBox  Header="New User Story" HorizontalAlignment="Center" Height="60" Margin="22,10,12,0" VerticalAlignment="Top" Width="420" FontStyle="Italic">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="2*"/>
                      <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtNewUserStory" Margin="5" TextWrapping="Wrap" Grid.Column="0" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                    <Button x:Name="ButtonAddNewUserStory"  Grid.Column="1" Foreground="white"  Background="#75b79e" Content="ADD" HorizontalAlignment="Right" Height="20" Margin="30 5 0 0" VerticalAlignment="Center" Width="60" />
                  </Grid>
                </GroupBox>
              </StackPanel>

              <StackPanel Grid.Row="2" Grid.ColumnSpan="5">
                <Button x:Name="ButtonAddNewProject"  Grid.Column="1" Foreground="white"  Background="#75b79e" Content="ADD NEW PROJECT" HorizontalAlignment="Center" Height="20" Margin="30 10 0 0" VerticalAlignment="Bottom" Width="150" />
              </StackPanel>
            </Grid>
          </GroupBox>

        </StackPanel>


        <StackPanel  Grid.Column="1">
          <!-- UserStory Section -->
          <GroupBox Header="USER STORY" HorizontalAlignment="Right" Height="380" Margin="0,0,15,0" VerticalAlignment="Top" Width="704" FontStyle="Italic">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="120*"/>
                <ColumnDefinition Width="177*"/>
              </Grid.ColumnDefinitions>

              <Grid.RowDefinitions>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="117*"/>
                <RowDefinition Height="121*"/>
                <RowDefinition Height="60*"/>
              </Grid.RowDefinitions>

              <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,116.5" Grid.RowSpan="2">
                <GroupBox  Header="Selected User Story" HorizontalAlignment="Center" Height="60" Margin="10,0,0,0" VerticalAlignment="Top" Width="680" FontStyle="Italic">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="8*"/>
                      <ColumnDefinition Width="2*"/>
                      <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="ComboBoxSelectedUserStory" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2" VerticalContentAlignment="Center" Width="420" Margin="5" ></ComboBox>
                    <Label Content="Current Member :" Margin="2" HorizontalContentAlignment="Left"  Grid.Column="1"   Grid.Row="2" VerticalContentAlignment="Center" FontStyle="Normal"/>
                    <TextBox x:Name="txtCurrentAssignedMember" Margin="2" TextWrapping="Wrap" Grid.Column="2"  Grid.Row="2" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="0"/>
                  </Grid>
                </GroupBox>
              </StackPanel>

              <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10.5,58.5,10" Grid.RowSpan="3">
                <Grid RenderTransformOrigin="0.545,0.488" Height="227">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="17*"/>
                    <ColumnDefinition Width="12*"/>
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                  </Grid.RowDefinitions>

                  <Label Content="Assigning Member :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="0" FontStyle="Normal"/>
                  <Label Content="Current Sprint :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="1" FontStyle="Normal"/>
                  <Label Content="Current Status :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="2" FontStyle="Normal"/>
                  <Label Content="Story Points :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="3" FontStyle="Normal"/>
                  <Label Content="Story Estimated Time :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="4" FontStyle="Normal"/>
                  <Label Content="Story Actual Time :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Grid.Row="5" FontStyle="Normal"/>

                  <ComboBox x:Name="ComboBoxAssignedMember" HorizontalAlignment="Right" VerticalContentAlignment="Center" Width="107" Margin="0,5,5,5" Grid.Row="0" Grid.ColumnSpan="2"/>
                  <ComboBox x:Name="ComboBoxCurrentSprint" HorizontalAlignment="Right" VerticalContentAlignment="Center" Width="107" Margin="0,5,5,5" Grid.Row="1" Grid.ColumnSpan="2"/>
                  <ComboBox x:Name="ComboBoxCurrentStatus" HorizontalAlignment="Right" VerticalContentAlignment="Center" Width="107" Margin="0,5,5,5.5" Grid.Row="2" Grid.ColumnSpan="2"/>
                  <TextBox x:Name="txtProjectNam" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                  <TextBox x:Name="txtProjectStartDat" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="4" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="True" BorderThickness="0"/>
                  <TextBox x:Name="txtInitialVelocit" Margin="5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="5" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                </Grid>

              </StackPanel>
              <StackPanel Grid.Column="1" Grid.Row="1" Margin="233,0.5,0,59" Grid.RowSpan="3" Grid.ColumnSpan="2">
                <GroupBox  Header="Tasks" HorizontalAlignment="Right" Height="238" VerticalAlignment="Top" Width="431" FontStyle="Italic">
                  <Grid>
                    <Grid.RowDefinitions>
                      <RowDefinition Height="28*"/>
                      <RowDefinition Height="20*"/>
                      <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="0,0,0,3">
                      <ListBox x:Name="TasksList" Height="105" Grid.Column="1" ItemsSource="{Binding}" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" FontStyle="Normal"></ListBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*"/>
                          <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                          <RowDefinition Height="*"/>
                          <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Task :" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontStyle="Normal"/>
                        <TextBox x:Name="txtMemberNam" Margin="54,5,5,5" TextWrapping="Wrap" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1" Grid.ColumnSpan="2"/>
                        <Label Content="Task Actual Time :" Margin="5" HorizontalContentAlignment="Left" Grid.Row="1" VerticalContentAlignment="Center" FontStyle="Normal"/>
                        <TextBox x:Name="txtTaskActualTime" Margin="74.5,5,5,5" TextWrapping="Wrap" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" FontStyle="Normal" CharacterCasing="Upper" IsReadOnly="False" BorderThickness="1"/>
                      </Grid>
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*"/>
                          <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="ButtonUpdateTask" Foreground="white"  Background="#75b79e" Content="UPDATE TASK" HorizontalAlignment="Left" Height="20" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="150" />
                        <Button x:Name="ButtonDeleteTask" Foreground="white"  Background="#75b79e" Content="DELETE TASK" HorizontalAlignment="Right" Grid.Column="1" Height="20" Margin="10,0,10,0" VerticalAlignment="Bottom" Width="150" />
                      </Grid>

                    </StackPanel>
                  </Grid>

                </GroupBox>
              </StackPanel>
              <Button x:Name="ButtonUpdateUserStory" Foreground="white"  Background="#75b79e" Content="UPDATE USER STORY" HorizontalAlignment="Left" Height="20" VerticalAlignment="Bottom" Width="150" Grid.Column="1" Margin="99,0,0,19" Grid.Row="3" />
              <Button x:Name="ButtonDeleteUserStory" Foreground="white"  Background="#75b79e" Content="DELETE USER STORY" HorizontalAlignment="Right" Height="20" Margin="0,0,109,21" VerticalAlignment="Bottom" Width="150"  Grid.Column="2" Grid.Row="3"  />

            </Grid>
          </GroupBox>



        </StackPanel>
      </Grid>

    </StackPanel>
  </Border>
</Window>
